{
    "name": "digitregroup/php-myelefant-client",
    "description": "myElefant PHP Client - myElefant is able to send SMS, Facebook Messenger, Push, Viber, Wechat, RCS",
    "type": "plugin",
    "license": "MIT",
    "require": {
        "guzzlehttp/guzzle": "^6.3",
        "monolog/monolog": "^1.24"
    },
    "authors": [
        {
            "name": "PREFOL Timothy",
            "email": "timothy.prefol@digitregroup.com"
        }
    ],
    "require-dev": {
        "atoum/visibility-extension": "^1.3",
        "atoum/atoum": "^3.3",
        "atoum/stubs": "^2.6"
    },
    "autoload": {
        "psr-4": {
            "myelefant\\": "src/"
        }
    },
    "scripts": {
        "test": "atoum -d ./src/tests/units ++verbose --debug"
    }
